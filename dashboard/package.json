{
  "name": "@conduits-xyz/conduits.app",
  "version": "0.4.1",
  "description": "web.app: to manage conduits",
  "author": "conduits.xyz",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:conduits-xyz/conduits.git"
  },
  "keywords": [
    "gateway",
    "serverless",
    "endpoint",
    "nts",
    "conduit"
  ],
  "scripts": {
    "lint": "stylelint src/**/*.{css,scss} --cache && eslint src --cache",
    "lint:fix": "stylelint src/**/*.{css,scss} --fix && eslint --fix jest src",
    "build": "vite build",
    "dev": "vite",
    "test": "npm run -s lint && jest -c jest/config.js --verbose --no-cache --rootDir .",
    "test-with-coverage": "npm run -s lint && jest -c jest/config.js --no-cache --coverage --rootDir .",
    "test:watch": "npm run -s lint && jest -c jest/config.js --watch --no-cache --rootDir .",
    "start": "npm run build && node ./live-server"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix src"
    ],
    "*.scss": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "^2.9.11",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^3.1.4",
    "react-hook-form": "^7.52.1",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.26.1",
    "redux": "^4.2.1",
    "redux-thunk": "^2.4.2",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.15.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.14.9",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "core-js": "^3.37.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-jsx": "^10.0.0",
    "eslint-config-standard-react": "^11.0.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-jest-dom": "^3.9.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.25.3",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.12.3",
    "husky": "^7.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^11.1.2",
    "live-server": "^1.2.2",
    "msw": "^0.35.0",
    "node-fetch": "2.6.2",
    "sass": "^1.77.0",
    "stylelint": "^16.6.1",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-scss": "^6.2.1",
    "tsutils": "^3.21.0",
    "typescript": "^5.4.5",
    "tailwindcss": "^3.4.13",
    "daisyui": "^4.12.10",
    "postcss": "^8.4.38",
    "vite": "^5.3.1"
  },
  "browserslist": [
    "last 2 chrome versions",
    "last 2 firefox versions",
    "last 2 safari versions",
    "last 2 edge versions"
  ]
}
